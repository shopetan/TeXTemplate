\newenvironment{Center}{%
  \topsep=0pt \partopsep=0pt%
  \trivlist \centering\item\relax}{%
  \endtrivlist}

\def\maketitle{%
  
    \vspace*{2mm}
    {\Large \bfseries \@date}
    \begin{Center}
     \vspace*{-\baselineskip}
     {\Large \bfseries \@title}
    \end{Center}

    \begin{flushright}
     \@author
    \end{flushright}
    \vspace*{\baselineskip}
    
}


